<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="@string/pref_cat_stops">
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="pref_auto_refresh"
			android:summary="@string/pref_auto_refresh_sum"
			android:title="@string/pref_auto_refresh_title" />
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/pref_cat_pebble">
		<Preference
			android:summary="@string/pref_pebble_dl_sum"
			android:title="@string/pref_pebble_dl_title">
			<intent
				android:action="android.intent.action.VIEW"
				android:data="pebble://appstore/53088e81ab1ae2f12900034e" />
		</Preference>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/pref_cat_other">
		<Preference
			android:summary="@string/pref_legal_sum"
			android:title="@string/pref_legal_title" />
		<Preference
			android:summary="@string/pref_twisto_website_sum"
			android:title="@string/pref_twisto_website_title">
			<intent
				android:action="android.intent.action.VIEW"
				android:data="http://twisto.mobi" />
		</Preference>
		<Preference
			android:summary="@string/pref_outadev_website_sum"
			android:title="@string/pref_outadev_website_title">
			<intent
				android:action="android.intent.action.VIEW"
				android:data="http://dev.outadoc.fr" />
		</Preference>
		<Preference
			android:key="version"
			android:title="@string/pref_about_title" />
	</PreferenceCategory>

</PreferenceScreen>